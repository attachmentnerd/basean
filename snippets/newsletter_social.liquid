{% include "element_social_icons_style" %}

<style>
  .social-icons--{{ block.id }} {
    text-align: {{ block.settings.social_text_align }};
  }
  {% if block.settings.social_text_align == "center" %}
    .social-icons--{{ block.id }} .social-icons__icons {
      justify-content: center;
    }
  {% elsif block.settings.social_text_align == "right" %}
    .social-icons--{{ block.id }} .social-icons__icons {
      justify-content: flex-end;
    }
  {% endif %}
  .social-icons--{{ block.id }} .social-icons__text {
    margin-right: 6px;
  }
  .social-icons--{{ block.id }} .social-icons__icon {
    margin: 0 6px;
  }
</style>

<div class="d-flex align-items-center social-icons social-icons--sidebar social-icons--{{ block.settings.social_icon_background_style }} social-icons--{{ block.id }}" kjb-settings-id="{{ 'social_icons_text_color' | settings_id: section: section, block: block }}">
  {% if section.settings.sidebar_placement != "top" %}
    <h6 class="social-icons__text" {% element_attributes "block.settings.heading_text" %}>{{ block.settings.heading_text }}</h6>
  {% endif %}
  <div class="social-icons__icons">
    {% if section.settings.sidebar_placement == "top" %}
      <span class="social-icons__text" {% element_attributes "block.settings.heading_text" %}>{{ block.settings.heading_text }}</span>
    {% endif %}
    {% include "element_social_icons" %}
  </div>
</div>
