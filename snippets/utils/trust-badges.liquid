{% comment %}
  Trust Badges Snippet
  Display security and trust indicators
{% endcomment %}

<div class="trust-badges">
  <div class="trust-badge">
    {% include 'icon', icon: 'shield-check', size: 'small' %}
    <span>Secure Checkout</span>
  </div>
  
  <div class="trust-badge">
    {% include 'icon', icon: 'credit-card', size: 'small' %}
    <span>Safe Payment</span>
  </div>
  
  <div class="trust-badge">
    {% include 'icon', icon: 'truck', size: 'small' %}
    <span>Instant Access</span>
  </div>
  
  {% if settings.show_money_back_guarantee %}
    <div class="trust-badge">
      {% include 'icon', icon: 'refresh', size: 'small' %}
      <span>{{ settings.guarantee_days | default: 30 }}-Day Guarantee</span>
    </div>
  {% endif %}
</div>
