{% assign image_settings_id = 'image' | settings_id: section: section, block: block %}

<style>
  .sidebar-custom--{{ block.id }} {
    text-align: {{ block.settings.custom_text_align }};
  }
  .sidebar-custom--{{ block.id }} .sidebar-custom__heading {
    color: {{ block.settings.color_custom_heading }};
  }
</style>

<div class="sidebar-custom sidebar-custom--{{ block.id }}">
  {% if block.settings.show_img %}
    {{ block.settings.image | image_picker_url: 'placeholder.png' | image_tag: class: "sidebar-custom__image", kjb_settings_id: image_settings_id, alt: block.settings.image_alt }}
  {% endif %}
  {% if block.settings.heading != "" %}
    <p 
      class="h5 sidebar-custom__heading" 
      kjb-settings-id="{{ 'heading' | settings_id: section: section, block: block }}" 
      {% element_attributes "block.settings.heading" %}
    >
      {{ block.settings.heading }}
    </p>
  {% endif %}
  <div 
    class="sidebar-custom__content" 
    kjb-settings-id="{{ 'content' | settings_id: section: section, block: block }}" 
    {% element_attributes "block.settings.content" %}
  >
    {{ block.settings.content }}
  </div>
  {% if block.settings.show_cta %}
    {% include "element_button" %}
  {% endif %}
</div>
