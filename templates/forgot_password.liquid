{% comment %}
  Forgot Password Template
  Password recovery form
{% endcomment %}

<div class="auth-wrapper">
  <div class="container container--narrow">
    <div class="auth-card">
      <h1 class="auth-title">{{ settings.recover_text | default: 'Recover Password' }}</h1>
      
      <form action="{{ routes.account_recover_url }}" method="post" class="auth-form">
        {% if form.errors %}
          <div class="form-errors">
            {{ form.errors | default_errors }}
          </div>
        {% endif %}
        
        {% if form.posted_successfully? %}
          <div class="form-success">
            We've sent you an email with a link to update your password.
          </div>
        {% endif %}
        
        <div class="form-field">
          <label for="recover-email" class="form-label">{{ settings.email_text | default: 'Email' }}</label>
          <input type="email" 
                 name="email" 
                 id="recover-email" 
                 class="form-input" 
                 required
                 autocomplete="email">
        </div>
        
        <div class="form-actions">
          <button type="submit" class="btn btn--primary btn--full">
            {{ settings.recovery_text | default: 'Send Recovery Info' }}
          </button>
        </div>
        
        <div class="auth-links">
          <a href="{{ routes.account_login_url }}" class="auth-link">
            {{ settings.login_text | default: 'Log In' }}
          </a>
        </div>
      </form>
    </div>
  </div>
</div>