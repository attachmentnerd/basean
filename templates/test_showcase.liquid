{% comment %}
  Test Showcase Template
  This template renders all available sections and demonstrates snippets
{% endcomment %}

<h1 style="text-align: center; padding: 40px; background: #f5f5f5;">Theme Component Showcase</h1>

{% comment %} SECTIONS {% endcomment %}
<div style="padding: 20px; background: #e8f5e9; margin: 20px 0;">
  <h2 style="text-align: center;">Sections</h2>
</div>

<h3 style="padding: 20px;">Header Section</h3>
{% section 'header' %}

<h3 style="padding: 20px;">About Hero Section</h3>
{% section 'about_hero' %}

<h3 style="padding: 20px;">Login Section</h3>
{% section 'login' %}

<h3 style="padding: 20px;">Products Section</h3>
{% section 'products' %}

<h3 style="padding: 20px;">Blog Listings Section</h3>
{% section 'blog_listings' %}

<h3 style="padding: 20px;">Carousel Section</h3>
{% section 'carousel' %}

<h3 style="padding: 20px;">Newsletter Hero Section</h3>
{% section 'newsletter_hero' %}

<h3 style="padding: 20px;">Section (Generic)</h3>
{% section 'section' %}

<h3 style="padding: 20px;">Footer Section</h3>
{% section 'footer' %}

{% comment %} SNIPPETS DEMONSTRATIONS {% endcomment %}
<div style="padding: 20px; background: #e3f2fd; margin: 40px 0;">
  <h2 style="text-align: center;">Snippets Demonstrations</h2>
</div>

<div style="padding: 20px;">
  <h3>Alert Messages</h3>
  {% include 'alert_messages' %}
</div>

<div style="padding: 20px;">
  <h3>Announcement</h3>
  {% include 'announcement', announcement: { title: 'Test Announcement', content: 'This is a test announcement content' } %}
</div>

<div style="padding: 20px;">
  <h3>Blog Listing</h3>
  {% include 'blog_listing', post: { title: 'Sample Blog Post', excerpt: 'This is a sample blog post excerpt...', url: '/blog/sample' } %}
</div>

<div style="padding: 20px;">
  <h3>Product Card</h3>
  {% include 'product', product: { title: 'Sample Product', description: 'Product description', price: 99.00 } %}
</div>

<div style="padding: 20px;">
  <h3>Custom Card</h3>
  {% include 'custom_card' %}
</div>

<div style="padding: 20px;">
  <h3>Newsletter Form</h3>
  {% include 'newsletter_form' %}
</div>

<div style="padding: 20px;">
  <h3>Pagination</h3>
  {% include 'pagination' %}
</div>

<div style="padding: 20px;">
  <h3>Social Icons</h3>
  {% include 'element_social_icons' %}
</div>

<div style="padding: 20px;">
  <h3>Video Component</h3>
  {% include 'video', video_url: 'https://example.com/video.mp4' %}
</div>

{% comment %} BLOCK COMPONENTS {% endcomment %}
<div style="padding: 20px; background: #fff3e0; margin: 40px 0;">
  <h2 style="text-align: center;">Block Components</h2>
</div>

<div style="padding: 20px;">
  <h3>Text Block</h3>
  {% include 'block_text', block: { settings: { text: '<p>This is a sample text block with some content.</p>' } } %}
</div>

<div style="padding: 20px;">
  <h3>Image Block</h3>
  {% include 'block_image', block: { settings: { image: 'placeholder.png', image_alt: 'Test Image' } } %}
</div>

<div style="padding: 20px;">
  <h3>CTA Block</h3>
  {% include 'block_cta', block: { settings: { cta_text: 'Call to Action', button_text: 'Click Me', button_link: '#' } } %}
</div>

<div style="padding: 20px;">
  <h3>Form Block</h3>
  {% include 'block_form', block: { settings: { form_id: 'test-form' } } %}
</div>

<div style="padding: 20px;">
  <h3>Feature Block</h3>
  {% include 'block_feature', block: { settings: { title: 'Feature Title', description: 'Feature description' } } %}
</div>

<div style="padding: 20px;">
  <h3>Pricing Block</h3>
  {% include 'block_pricing', block: { settings: { title: 'Pricing Plan', price: '$99', features: 'Feature 1, Feature 2' } } %}
</div>

<div style="padding: 20px;">
  <h3>Accordion Block</h3>
  {% include 'block_accordion', block: { settings: { title: 'Accordion Title', content: 'Accordion content goes here' } } %}
</div>

<div style="padding: 20px;">
  <h3>Countdown Block</h3>
  {% include 'block_countdown', block: { settings: { end_date: '2024-12-31' } } %}
</div>

{% comment %} SIDEBAR COMPONENTS {% endcomment %}
<div style="padding: 20px; background: #f3e5f5; margin: 40px 0;">
  <h2 style="text-align: center;">Sidebar Components</h2>
</div>

<div class="row" style="padding: 20px;">
  <div class="col-4">
    <h4>Recent Posts</h4>
    {% include 'sidebar_recent_posts' %}
  </div>
  <div class="col-4">
    <h4>Categories</h4>
    {% include 'sidebar_categories' %}
  </div>
  <div class="col-4">
    <h4>Search</h4>
    {% include 'sidebar_search' %}
  </div>
</div>

<div class="row" style="padding: 20px;">
  <div class="col-4">
    <h4>Social</h4>
    {% include 'sidebar_social' %}
  </div>
  <div class="col-4">
    <h4>CTA</h4>
    {% include 'sidebar_cta' %}
  </div>
  <div class="col-4">
    <h4>Instructor</h4>
    {% include 'sidebar_instructor' %}
  </div>
</div>

<style>
  /* Basic styling for the showcase page */
  .row {
    display: flex;
    flex-wrap: wrap;
    margin: -10px;
  }
  .col-4 {
    flex: 0 0 33.333%;
    padding: 10px;
  }
  h3 {
    border-bottom: 2px solid #ddd;
    margin-bottom: 20px;
  }
</style>