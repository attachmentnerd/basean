{% comment %}
  Password Reset Template
  Form to create new password
{% endcomment %}

<div class="auth-wrapper">
  <div class="container container--narrow">
    <div class="auth-card">
      <h1 class="auth-title">{{ settings.reset_text | default: 'Create New Password' }}</h1>
      
      <form action="{{ form.action }}" method="post" class="auth-form">
        {% if form.errors %}
          <div class="form-errors">
            {{ form.errors | default_errors }}
          </div>
        {% endif %}
        
        <div class="form-field">
          <label for="reset-password" class="form-label">
            {{ settings.new_password | default: 'Enter New Password' }}
          </label>
          <input type="password" 
                 name="member[password]" 
                 id="reset-password" 
                 class="form-input" 
                 required
                 autocomplete="new-password"
                 minlength="8">
        </div>
        
        <div class="form-field">
          <label for="reset-password-confirm" class="form-label">
            {{ settings.confirm_password | default: 'Confirm Password' }}
          </label>
          <input type="password" 
                 name="member[password_confirmation]" 
                 id="reset-password-confirm" 
                 class="form-input" 
                 required
                 autocomplete="new-password"
                 minlength="8">
        </div>
        
        <div class="form-actions">
          <button type="submit" class="btn btn--primary btn--full">
            {{ settings.reset_btn | default: 'Submit' }}
          </button>
        </div>
      </form>
    </div>
  </div>
</div>