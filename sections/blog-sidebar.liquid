<aside class="blog-sidebar-section">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'search' %}
        <div class="sidebar-widget">
          <h3 class="widget-title">{{ block.settings.title }}</h3>
          <form action="{{ routes.search_url }}" method="get" class="widget-search">
            <input type="hidden" name="type" value="article">
            <input type="search" 
                   name="q" 
                   placeholder="{{ block.settings.placeholder }}" 
                   class="widget-search__input">
            <button type="submit" class="widget-search__button">
              {% include 'icon', icon: 'search' %}
            </button>
          </form>
        </div>
        
      {% when 'categories' %}
        <div class="sidebar-widget">
          <h3 class="widget-title">{{ block.settings.title }}</h3>
          <ul class="widget-list">
            {% for category in blog.categories %}
              <li class="widget-list__item">
                <a href="{{ category.url }}" class="widget-list__link">
                  {{ category.title }}
                  <span class="widget-list__count">({{ category.articles_count }})</span>
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
        
      {% when 'recent_posts' %}
        <div class="sidebar-widget">
          <h3 class="widget-title">{{ block.settings.title }}</h3>
          <ul class="widget-posts">
            {% for article in blog.articles limit: block.settings.post_limit %}
              <li class="widget-post">
                <a href="{{ article.url }}" class="widget-post__link">
                  {% if article.image %}
                    <img src="{{ article.image | image_url: '80x80' }}" 
                         alt="{{ article.title }}" 
                         class="widget-post__image">
                  {% endif %}
                  <div class="widget-post__content">
                    <h4 class="widget-post__title">{{ article.title }}</h4>
                    <time class="widget-post__date">{{ article.published_at | date: '%b %d, %Y' }}</time>
                  </div>
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
        
      {% when 'newsletter' %}
        <div class="sidebar-widget sidebar-widget--newsletter">
          <h3 class="widget-title">{{ block.settings.title }}</h3>
          <p class="widget-description">{{ block.settings.description }}</p>
          {% include 'newsletter-form', form_id: 'sidebar-newsletter' %}
        </div>
        
      {% when 'about' %}
        <div class="sidebar-widget">
          <h3 class="widget-title">{{ block.settings.title }}</h3>
          {% if block.settings.image %}
            <img src="{{ block.settings.image | image_url: '300x' }}" 
                 alt="{{ block.settings.title }}" 
                 class="widget-image">
          {% endif %}
          <div class="widget-content">
            {{ block.settings.content }}
          </div>
        </div>
    {% endcase %}
  {% endfor %}
</aside>

<style>
  .sidebar-widget {
    margin-bottom: var(--space-xl);
    padding-bottom: var(--space-xl);
    border-bottom: 1px solid var(--color-border);
  }
  
  .sidebar-widget:last-child {
    border-bottom: none;
  }
  
  .widget-title {
    margin-bottom: var(--space-md);
    font-size: 1.25rem;
    font-weight: 600;
  }
  
  .widget-search {
    position: relative;
  }
  
  .widget-search__input {
    width: 100%;
    padding: 0.75rem 2.5rem 0.75rem 1rem;
    font-size: 0.875rem;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
  }
  
  .widget-search__button {
    position: absolute;
    top: 50%;
    right: 0.5rem;
    transform: translateY(-50%);
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2rem;
    height: 2rem;
    color: var(--color-text-light);
    background: none;
    border: none;
    cursor: pointer;
  }
  
  .widget-list {
    margin: 0;
    padding: 0;
    list-style: none;
  }
  
  .widget-list__item {
    margin-bottom: 0.75rem;
  }
  
  .widget-list__link {
    display: flex;
    justify-content: space-between;
    color: var(--color-text);
    transition: color var(--transition-fast);
  }
  
  .widget-list__link:hover {
    color: var(--color-primary);
  }
  
  .widget-list__count {
    color: var(--color-text-light);
  }
  
  .widget-posts {
    margin: 0;
    padding: 0;
    list-style: none;
  }
  
  .widget-post {
    margin-bottom: var(--space-md);
  }
  
  .widget-post__link {
    display: flex;
    gap: var(--space-sm);
    color: inherit;
  }
  
  .widget-post__image {
    width: 60px;
    height: 60px;
    object-fit: cover;
    border-radius: var(--radius-md);
    flex-shrink: 0;
  }
  
  .widget-post__title {
    margin: 0 0 0.25rem;
    font-size: 0.875rem;
    font-weight: 500;
    line-height: 1.3;
  }
  
  .widget-post__date {
    font-size: 0.75rem;
    color: var(--color-text-light);
  }
  
  .widget-description {
    margin-bottom: var(--space-md);
    color: var(--color-text-light);
  }
  
  .widget-image {
    width: 100%;
    margin-bottom: var(--space-md);
    border-radius: var(--radius-md);
  }
  
  .sidebar-widget--newsletter {
    padding: var(--space-lg);
    background-color: var(--color-surface);
    border-radius: var(--radius-lg);
  }
</style>

{% schema %}
{
  "name": "Blog Sidebar",
  "blocks": [
    {
      "type": "search",
      "name": "Search",
      "elements": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Search"
        },
        {
          "type": "text",
          "id": "placeholder",
          "label": "Placeholder",
          "default": "Search blog..."
        }
      ]
    },
    {
      "type": "categories",
      "name": "Categories",
      "elements": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Categories"
        }
      ]
    },
    {
      "type": "recent_posts",
      "name": "Recent Posts",
      "elements": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Recent Posts"
        },
        {
          "type": "range",
          "id": "post_limit",
          "label": "Number of posts",
          "min": 3,
          "max": 10,
          "step": 1,
          "default": 5
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter",
      "elements": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Subscribe"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Get the latest posts delivered to your inbox."
        }
      ]
    },
    {
      "type": "about",
      "name": "About",
      "elements": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "About"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content",
          "default": "<p>Share information about your blog and brand.</p>"
        }
      ]
    }
  ]
}
{% endschema %}
