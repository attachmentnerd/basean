<!-- sections/cta_section.liquid -->
<section class="cta-section" style="background: {{ section.settings.gradient_start }} linear-gradient({{ section.settings.gradient_angle }}deg, {{ section.settings.gradient_start }} 0%, {{ section.settings.gradient_end }} 100%);">
  <div class="container">
    <div class="cta-wrapper">
      <div class="cta-image">
        <img src="{{ section.settings.image | image_picker_url: 'placeholder.png' }}" alt="{{ section.settings.image_alt }}" />
      </div>
      <div class="cta-content">
        {% if section.settings.eyebrow_text != blank %}
          <span class="cta-eyebrow" style="color: {{ section.settings.eyebrow_color }};">{{ section.settings.eyebrow_text }}</span>
        {% endif %}
        <h2 class="cta-heading" style="color: {{ section.settings.heading_color }};">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="cta-subheading" style="color: {{ section.settings.subheading_color }};">{{ section.settings.subheading }}</p>
        {% endif %}
        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_link }}" class="cta-button" style="background-color: {{ section.settings.button_bg_color }}; color: {{ section.settings.button_text_color }};">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "CTA Section",
  "elements": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "eyebrow_text",
      "label": "Eyebrow Text",
      "default": "AUDIOBOOK MORE YOUR STYLE?"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Listen As I Narrate My Book!"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "If you love my podcast, then you're going to love the audiobook! Listen to me read it to you!"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "PURCHASE THE AUDIBLE VERSION"
    },
    {
      "type": "action",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "Recommended: Book cover or product image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image Alt Text",
      "default": "Book cover"
    },
    {
      "type": "header",
      "content": "Text Colors"
    },
    {
      "type": "color",
      "id": "eyebrow_color",
      "label": "Eyebrow Text Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Subheading Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "button_bg_color",
      "label": "Button Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#333333"
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "color",
      "id": "gradient_start",
      "label": "Gradient Start Color",
      "default": "#FFB366"
    },
    {
      "type": "color",
      "id": "gradient_end",
      "label": "Gradient End Color",
      "default": "#FFA85C"
    },
    {
      "type": "range",
      "id": "gradient_angle",
      "label": "Gradient Angle",
      "min": 0,
      "max": 360,
      "step": 15,
      "unit": "deg",
      "default": 135
    }
  ],
  "presets": [
    {
      "name": "CTA Section",
      "category": "CTA",
      "settings": {
        "eyebrow_text": "AUDIOBOOK MORE YOUR STYLE?",
        "heading": "Listen As I Narrate My Book!",
        "subheading": "If you love my podcast, then you're going to love the audiobook! Listen to me read it to you!",
        "button_text": "PURCHASE THE AUDIBLE VERSION",
        "eyebrow_color": "#FFFFFF",
        "heading_color": "#FFFFFF",
        "subheading_color": "#FFFFFF",
        "button_bg_color": "#FFFFFF",
        "button_text_color": "#333333",
        "gradient_start": "#FFB366",
        "gradient_end": "#FFA85C",
        "gradient_angle": 135
      }
    }
  ]
}
{% endschema %}