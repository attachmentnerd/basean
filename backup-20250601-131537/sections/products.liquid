<section class="section">
  <div class="container">
    <h1>{{ section.settings.title | default: 'My Library' }}</h1>
    
    <div class="products-grid">
      {% for product in member.products %}
        <div class="card">
          {% if product.thumbnail_url %}
            <img src="{{ product.thumbnail_url }}" alt="{{ product.title }}" style="width: 100%; height: 200px; object-fit: cover;">
          {% endif %}
          <div style="padding: var(--space-4);">
            <h3>{{ product.title }}</h3>
            <p>{{ product.description | truncate: 100 }}</p>
            <a href="{{ product.url }}" class="btn btn--primary">Access</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Products",
  "elements": [
    {
      "type": "text",
      "id": "title",
      "label": "Page Title",
      "default": "My Library"
    }
  ]
}
{% endschema %}
