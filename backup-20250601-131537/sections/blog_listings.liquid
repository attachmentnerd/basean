<section class="section">
  <div class="container">
    <h1>{{ section.settings.title | default: 'Blog' }}</h1>
    
    {% paginate blog.posts by 10 %}
      <div class="blog-grid">
        {% for post in paginate.collection %}
          <article class="card">
            {% if post.image_url %}
              <img src="{{ post.image_url }}" alt="{{ post.title }}" style="width: 100%; height: 200px; object-fit: cover;">
            {% endif %}
            <div style="padding: var(--space-4);">
              <h2><a href="{{ post.url }}">{{ post.title }}</a></h2>
              <p>{{ post.content | strip_html | truncate: 150 }}</p>
              <time>{{ post.created_at | date: '%B %d, %Y' }}</time>
            </div>
          </article>
        {% endfor %}
      </div>
      
      {% include 'pagination' %}
    {% endpaginate %}
  </div>
</section>

{% schema %}
{
  "name": "Blog Listings",
  "elements": [
    {
      "type": "text",
      "id": "title",
      "label": "Page Title",
      "default": "Blog"
    }
  ]
}
{% endschema %}
