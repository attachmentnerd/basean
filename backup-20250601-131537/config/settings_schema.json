      },
      {
        "type": "text",
        "id": "social_instagram",
        "label": "Instagram URL"
      },
      {
        "type": "text",
        "id": "social_youtube",
        "label": "YouTube URL"
      },
      {
        "type": "text",
        "id": "social_linkedin",
        "label": "LinkedIn URL"
      },
      {
        "type": "text",
        "id": "social_tiktok",
        "label": "TikTok URL"
      },
      {
        "type": "header",
        "content": "Display Options",
        "style": "subheading"
      },
      {
        "type": "checkbox",
        "id": "social_show_labels",
        "label": "Show Social Labels",
        "default": false,
        "info": "Display text labels next to icons"
      }
    ]
  },
