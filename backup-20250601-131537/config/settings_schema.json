[
  {
    "name": "theme_info",
    "settings_validatable": true,
    "theme_name": "AttachmentNerd Clean",
    "theme_version": "2.0.7",
    "theme_author": "AttachmentNerd",
    "theme_documentation_url": "https://attachmentnerd.com/docs",
    "theme_support_url": "https://attachmentnerd.com/support"
  },
  {
    "name": "Brand",
    "elements": [
      {
        "type": "header",
        "content": "Logo & Favicon"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo Image",
        "info": "Recommended: 200x60px PNG with transparent background"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "fit": "crop",
        "width": 32,
        "height": 32,
        "info": "32x32px PNG recommended. [Create favicon](https://favicon.io/)"
      },
      {
        "type": "header",
        "content": "Site Information",
        "style": "subheading"
      },
      {
        "type": "text",
        "id": "site_title",
        "label": "Site Title",
        "default": "AttachmentNerd"
      },
      {
        "type": "text",
        "id": "site_description",
        "label": "Site Description",
        "default": "Share your knowledge with the world"
      }
    ]
  },
  {
    "name": "Colors",
    "elements": [
      {
        "type": "header",
        "content": "Primary Colors"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary Color",
        "default": "#667eea"
      },
      {
        "type": "color",
        "id": "color_primary_dark",
        "label": "Primary Dark",
        "default": "#5a67d8",
        "info": "Used for hover states"
      },
      {
        "type": "color",
        "id": "color_secondary",
        "label": "Secondary Color",
        "default": "#764ba2"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Accent Color",
        "default": "#f6ad55"
      },
      {
        "type": "header",
        "content": "Text Colors",
        "style": "subheading"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text Color",
        "default": "#111827"
      },
      {
        "type": "color",
        "id": "color_text_light",
        "label": "Light Text",
        "default": "#6b7280",
        "info": "For secondary text"
      },
      {
        "type": "color",
        "id": "color_text_inverse",
        "label": "Inverse Text",
        "default": "#ffffff",
        "info": "Text on dark backgrounds"
      },
      {
        "type": "header",
        "content": "Background Colors",
        "style": "subheading"
      },
      {
        "type": "color",
        "id": "color_bg",
        "label": "Background",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "color_bg_light",
        "label": "Light Background",
        "default": "#f9fafb"
      },
      {
        "type": "color",
        "id": "color_bg_dark",
        "label": "Dark Background",
        "default": "#111827"
      },
      {
        "type": "header",
        "content": "Status Colors",
        "style": "subheading"
      },
      {
        "type": "color",
        "id": "color_success",
        "label": "Success",
        "default": "#48bb78"
      },
      {
        "type": "color",
        "id": "color_warning",
        "label": "Warning",
        "default": "#ed8936"
      },
      {
        "type": "color",
        "id": "color_danger",
        "label": "Error/Danger",
        "default": "#f56565"
      },
      {
        "type": "color",
        "id": "color_info",
        "label": "Info",
        "default": "#4299e1"
      }
    ]
  },
  {
    "name": "Typography",
    "elements": [
      {
        "type": "header",
        "content": "Font Families"
      },
      {
        "type": "font_select",
        "id": "font_heading",
        "label": "Heading Font",
        "default": "Inter",
        "preset": "google_fonts"
      },
      {
        "type": "font_select",
        "id": "font_body",
        "label": "Body Font",
        "default": "Inter",
        "preset": "google_fonts"
      },
      {
        "type": "header",
        "content": "Font Sizes",
        "style": "subheading"
      },
      {
        "type": "select",
        "id": "font_size_base",
        "label": "Base Font Size",
        "default": "16",
        "options": [
          { "value": "14", "label": "14px (Small)" },
          { "value": "15", "label": "15px" },
          { "value": "16", "label": "16px (Default)" },
          { "value": "17", "label": "17px" },
          { "value": "18", "label": "18px (Large)" }
        ]
      }
    ]
  },
  {
    "name": "Layout",
    "elements": [
      {
        "type": "header",
        "content": "Container Settings"
      },
      {
        "type": "select",
        "id": "container_width",
        "label": "Container Width",
        "default": "1200",
        "options": [
          { "value": "1000", "label": "Narrow (1000px)" },
          { "value": "1200", "label": "Standard (1200px)" },
          { "value": "1400", "label": "Wide (1400px)" },
          { "value": "1600", "label": "Extra Wide (1600px)" }
        ]
      },
      {
        "type": "header",
        "content": "Header Settings",
        "style": "subheading"
      },
      {
        "type": "select",
        "id": "header_style",
        "label": "Header Style",
        "default": "default",
        "options": [
          { "value": "default", "label": "Default" },
          { "value": "transparent", "label": "Transparent" },
          { "value": "dark", "label": "Dark" }
        ]
      },
      {
        "type": "select",
        "id": "header_height",
        "label": "Header Height",
        "default": "64",
        "options": [
          { "value": "56", "label": "Compact (56px)" },
          { "value": "64", "label": "Standard (64px)" },
          { "value": "72", "label": "Tall (72px)" },
          { "value": "80", "label": "Extra Tall (80px)" }
        ]
      },
      {
        "type": "checkbox",
        "id": "header_sticky",
        "label": "Sticky Header",
        "default": true
      },
      {
        "type": "header",
        "content": "Design Options",
        "style": "subheading"
      },
      {
        "type": "select",
        "id": "button_style",
        "label": "Button Style",
        "default": "default",
        "options": [
          { "value": "default", "label": "Default" },
          { "value": "rounded", "label": "Fully Rounded" },
          { "value": "square", "label": "Square" }
        ]
      },
      {
        "type": "text",
        "id": "border_radius",
        "label": "Border Radius",
        "default": "0.375rem",
        "info": "CSS value (e.g., 4px, 0.5rem)"
      },
      {
        "type": "checkbox",
        "id": "enable_shadows",
        "label": "Enable Shadows",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_rounded_corners",
        "label": "Enable Rounded Corners",
        "default": true
      }
    ]
  },
  {
    "name": "Social Media",
    "elements": [
      {
        "type": "header",
