[
  {
    "name": "theme_info",
    "theme_name": "AttachmentNerd Base Theme",
    "theme_version": "1.0.0",
    "theme_author": "AttachmentNerd",
    "theme_documentation_url": "https://help.attachmentnerd.com",
    "theme_support_url": "https://support.attachmentnerd.com",
    "settings_validatable": true
  },
  {
    "name": "Brand",
    "elements": [
      {
        "type": "header",
        "content": "Logo"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "image_picker",
        "id": "logo_white",
        "label": "Logo image (white version)",
        "info": "Used on dark backgrounds"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "32x32px .png recommended"
      }
    ]
  },
  {
    "name": "Colors",
    "elements": [
      {
        "type": "header",
        "content": "Brand Colors"
      },
      {
        "type": "color",
        "id": "color_primary",
        "label": "Primary color",
        "default": "#2563eb"
      },
      {
        "type": "color",
        "id": "color_primary_dark",
        "label": "Primary color (dark)",
        "default": "#1d4ed8"
      },
      {
        "type": "color",
        "id": "color_secondary",
        "label": "Secondary color",
        "default": "#7c3aed"
      },
      {
        "type": "color",
        "id": "color_accent",
        "label": "Accent color",
        "default": "#f59e0b"
      },
      {
        "type": "header",
        "content": "Neutral Colors"
      },
      {
        "type": "color",
        "id": "color_text",
        "label": "Text color",
        "default": "#1f2937"
      },
      {
        "type": "color",
        "id": "color_text_light",
        "label": "Light text color",
        "default": "#6b7280"
      },
      {
        "type": "color",
        "id": "color_background",
        "label": "Background color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "color_surface",
        "label": "Surface color",
        "default": "#f9fafb"
      },
      {
        "type": "color",
        "id": "color_border",
        "label": "Border color",
        "default": "#e5e7eb"
      }
    ]
  },
  {
    "name": "Typography",
    "elements": [
      {
        "type": "font_picker",
        "id": "font_sans",
        "label": "Sans-serif font",
        "default": "inter_n4"
      },
      {
        "type": "font_picker",
        "id": "font_serif",
        "label": "Serif font",
        "default": "crimson_text_n4"
      },
      {
        "type": "range",
        "id": "font_size_base",
        "label": "Base font size",
        "min": 14,
        "max": 20,
        "step": 1,
        "unit": "px",
        "default": 16
      }
    ]
  },
  {
    "name": "Header",
    "elements": [
      {
        "type": "checkbox",
        "id": "sticky_header",
        "label": "Enable sticky header",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_announcement_bar",
        "label": "Show announcement bar",
        "default": false
      },
      {
        "type": "text",
        "id": "announcement_text",
        "label": "Announcement text"
      },
      {
        "type": "action",
        "id": "announcement_link",
        "label": "Announcement link"
      }
    ]
  },
  {
    "name": "Footer",
    "elements": [
      {
        "type": "textarea",
        "id": "footer_description",
        "label": "Footer description",
        "default": "Empowering parents with resources, community, and support for their parenting journey."
      },
      {
        "type": "text",
        "id": "copyright_text",
        "label": "Copyright text",
        "default": "All rights reserved."
      }
    ]
  },
  {
    "name": "Social media",
    "elements": [
      {
        "type": "text",
        "id": "social_facebook",
        "label": "Facebook URL"
      },
      {
        "type": "text",
        "id": "social_twitter",
        "label": "Twitter URL"
      },
      {
        "type": "text",
        "id": "social_instagram",
        "label": "Instagram URL"
      },
      {
        "type": "text",
        "id": "social_youtube",
        "label": "YouTube URL"
      },
      {
        "type": "text",
        "id": "social_linkedin",
        "label": "LinkedIn URL"
      },
      {
        "type": "text",
        "id": "social_pinterest",
        "label": "Pinterest URL"
      }
    ]
  },
  {
    "name": "Products",
    "elements": [
      {
        "type": "checkbox",
        "id": "show_related_products",
        "label": "Show related products",
        "default": true
      },
      {
        "type": "range",
        "id": "related_products_count",
        "label": "Number of related products",
        "min": 2,
        "max": 8,
        "step": 1,
        "default": 4
      }
    ]
  },
  {
    "name": "Blog",
    "elements": [
      {
        "type": "checkbox",
        "id": "show_blog_sidebar",
        "label": "Show blog sidebar",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_related_posts",
        "label": "Show related posts",
        "default": true
      },
      {
        "type": "range",
        "id": "blog_posts_per_page",
        "label": "Posts per page",
        "min": 6,
        "max": 24,
        "step": 3,
        "default": 12
      }
    ]
  },
  {
    "name": "Cart",
    "elements": [
      {
        "type": "checkbox",
        "id": "show_cart_note",
        "label": "Enable order notes",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_cart_recommendations",
        "label": "Show product recommendations",
        "default": true
      }
    ]
  },
  {
    "name": "Trust & Security",
    "elements": [
      {
        "type": "checkbox",
        "id": "show_money_back_guarantee",
        "label": "Show money-back guarantee",
        "default": true
      },
      {
        "type": "range",
        "id": "guarantee_days",
        "label": "Guarantee period (days)",
        "min": 7,
        "max": 90,
        "step": 1,
        "default": 30
      },
      {
        "type": "checkbox",
        "id": "show_payment_icons",
        "label": "Show payment icons",
        "default": true
      }
    ]
  },
  {
    "name": "Newsletter",
    "elements": [
      {
        "type": "text",
        "id": "newsletter_heading",
        "label": "Newsletter heading",
        "default": "Stay Connected"
      },
      {
        "type": "textarea",
        "id": "newsletter_text",
        "label": "Newsletter text",
        "default": "Get parenting tips and exclusive offers delivered to your inbox."
      },
      {
        "type": "text",
        "id": "newsletter_consent_text",
        "label": "Consent text",
        "default": "By subscribing, you agree to receive emails from us. Unsubscribe anytime."
      }
    ]
  },
  {
    "name": "Member Features",
    "elements": [
      {
        "type": "checkbox",
        "id": "show_member_dashboard",
        "label": "Enable member dashboard",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "show_progress_tracking",
        "label": "Show course progress",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_community_features",
        "label": "Enable community features",
        "default": true
      }
    ]
  },
  {
    "name": "Custom Code",
    "elements": [
      {
        "type": "textarea",
        "id": "custom_css",
        "label": "Custom CSS"
      },
      {
        "type": "textarea",
        "id": "custom_javascript",
        "label": "Custom JavaScript"
      },
      {
        "type": "textarea",
        "id": "tracking_codes",
        "label": "Tracking codes",
        "info": "Added to the <head> of every page"
      }
    ]
  }
]